/* This is a simple device tree overlay for RPi */

/dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835", "brcm,bcm2708", "brcm,bcm2709";

	fragment@0 {
		target = <&i2c1>;
		
		__overlay__ {
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			amg88xx: amg88xx@68 {
				compatible = "panasonic,amg88xx";
				reg = <0x68>;
				status = "okay";

				/* TODO provide support for the 
				   interrupt line */
			};
		};
	};
};

